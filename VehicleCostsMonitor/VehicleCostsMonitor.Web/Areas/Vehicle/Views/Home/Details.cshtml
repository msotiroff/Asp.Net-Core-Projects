@model VehicleDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">Details</h2>

<div class="container">
    <div class="pull-right">
        <img class="img-tiny pull-right" src="@Model.PicturePath" />
        @if (Model.OwnerUserName == User.Identity.Name)
        {
            <a asp-area="vehicle" asp-controller="picture" asp-action="change" class="btn btn-default pull-right">Change picture</a>
        }
    </div>
    <div class="pull-left">
        @Model.FullModelName
    </div>
    <br />
    <div class="pull-left">
        @Model.FuelTypeName, year @Model.YearOfManufacture, @Model.EngineHorsePower HP, @Model.GearingTypeName
    </div>
    <br />
    <div>
        <label asp-for="@Model.OwnerUserName"></label>: @Model.OwnerUserName
    </div>

    <div class="well">
        <div class="dl-horizontal">
            @if (Model.OwnerUserName == User.Identity.Name)
            {
                <a asp-area="vehicle" asp-controller="fuelentry" asp-action="create" asp-route-id="@Model.Id">
                    <img class="btn btn-default" alt="Add Fuel" title="Add Fuel Entry" src="@Url.Content("~/images/AddFuel.jpg")" />
                </a>

                <a asp-area="vehicle" asp-controller="costentry" asp-action="create" asp-route-id="@Model.Id">
                    <img class="btn btn-default" alt="Add Cost Entry" title="Add Cost entry" src="@Url.Content("~/images/AddCost.jpg")" />
                </a>

                <a asp-area="vehicle" asp-controller="home" asp-action="edit" asp-route-id="@Model.Id">
                    <img class="btn btn-default" alt="Edit Vehicle" title="Edit vehicle info" src="@Url.Content("~/images/Edit.jpg")" />
                </a>

                <a asp-area="vehicle" asp-controller="home" asp-action="delete" asp-route-id="@Model.Id">
                    <img class="btn btn-default" alt="Delete vehicle" title="Delete vehicle" src="@Url.Content("~/images/Delete.jpg")" />
                </a>
            }
        </div>
    </div>
</div>

<h4 class="text-center">Statistics:</h4>
<table class="table table-striped table-responsive">
    <tbody>
        <tr>
            <td>Consumption:</td>
            <td>@Model.FuelConsumption.ToString("f2") / 100 km</td>
            <td>@Model.TotalDistance km and @Model.TotalFuelAmount litres</td>
        </tr>
        <tr>
            <td>Fuel Costs:</td>
            <td>@Model.TotalFuelCostsPerHundredKm.ToString("f2") / 100km</td>
            <td>@Model.TotalDistance km and @Model.TotalFuelCosts.ToString("f2") money</td>
        </tr>
        <tr>
            <td>Other Costs:</td>
            <td>@Model.TotalOtherCosts.ToString("f2")</td>
            <td>@Model.TotalDistance km and @Model.TotalOtherCosts.ToString("f2") money</td>
        </tr>
    </tbody>
</table>
<h4 class="text-center">Entries:</h4>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Date</th>
            <th>Odometer</th>
            <th>Trip Odometer</th>
            <th>Fuel Quantity</th>
            <th>Fuel Type</th>
            <th>Price</th>
            <th>Average</th>
            <th>Type</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.Entries)
        {
            <tr>
                @await Html.PartialAsync("../Shared/DisplayTemplates/_IEntryModelTemplate.cshtml", entry)
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync(WebConstants.PaginationPartial, Model.Entries as IPaginatedList)
